        "disableBgpRoutePropagation": true,
        "routes": [
          {
            "name": "VM-to-AKS",
            "properties": {
              "addressPrefix": "10.10.1.0/24",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "[parameters('azureFirewallPrivateIP')]"
            }
          },
          {
            "name": "VM-to-Files",
            "properties": {
              "addressPrefix": "10.10.2.0/24",
              "nextHopType": "VirtualAppliance",
              "nextHopIpAddress": "[parameters('azureFirewallPrivateIP')]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "routeTableID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/routeTables', parameters('resourceNames').network.internetRouteTable)]"
    },
    "gatewayRouteTableID": {
      "type": "string",
